<h1>New game</h1>

<div class="letters">
<% @letters.each do |letter| %>
<div class="letter"><%= letter.upcase %></div>
<% end %>
</div>

<br><br>

<h3>What is the longest word you can find?</h3>

<form action="/score" method="post" data-turbo="false">
  <input style="width: 300px;" type="text" name="answer" placeholder="Give me your longest word!">
  <input type="hidden" name="letters" value="<%=@letters.join%>">
  <input type="submit" value="Let's go!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
